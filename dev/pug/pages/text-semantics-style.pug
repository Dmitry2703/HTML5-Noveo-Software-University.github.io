extends ../base/base-lect.pug

block layout-settings
    include ../lectures/themes/text-semantics-style.pug
    - var conf = textSemanticsStyle;
    - var pageTitle = conf.title;
    - var pageType = 'lecture'
    - var currentPage = conf.page;
    - var subthemes = conf.subthemes;
    -
        var listToRead = [{
            id: "toRead-1",
            title: "Справочник по тегам HTML5",
            href: "https://developer.mozilla.org/ru/docs/Web/HTML/Element"
        }, {
            id: "toRead-2",
            title: "Спецификация HTML5",
            href: "https://www.w3.org/TR/html5/"
        }, {
            id: "toRead-3",
            title: "Google web fonts",
            href: "https://fonts.google.com/"
        }, {
            id: "toRead-4",
            title: "Webfont-генератор FontSquirrel",
            href: "https://www.fontsquirrel.com/"
        }, {
